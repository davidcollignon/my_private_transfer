
<div class="container">

 <div class="top">
<h1>Choose a car</h1>
<div class="filter">
  <p>Filter <i class="fas fa-filter"></i>
</div>
</div>
<div class="cars">
  <% @cars.each do |car| %>

  <div class="car">
    <div class="price"><h4><%= car.price_per_km  %>$</h4></div>
    <div class="pic">
        <%= image_tag "mercedes.jpg" %>
      </div>
    <div class="info">
      <h2><%= car.brand %></h2>
      <p><%= car.description %></p>
      <p class="desc"><i class="fas fa-users"></i> max. <%= car.passenger_capacity %> | <i class="fas fa-suitcase"></i> max. <%= car.luggage_capacity %>

      </div>
<%= link_to "", new_service_path(car_id: car) %>
    </div>
    <% end %>
  </div>
</div>
