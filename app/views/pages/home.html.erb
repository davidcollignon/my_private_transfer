<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">

<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <h2>Private transfers for your clients in France</h2>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6">

      <%= form_tag pages_index_path, method: :get do %>

      <div class="form-group row">
        <ul class="list-inline">
          <li class="active"><a href="#">Private Transfer</a></li>
          <li ><a href="#">Driver at disposal</a></li>
          <li ><a href="#">Meet and Greet</a></li>
        </ul>
      </div>

      <div class="form-group row">
        <div class="col-xs-12 col-sm-6 col-md-6">
        <%= text_field_tag :departure,
      params[:departure],
      class: "form-control",
      placeholder: "Departure"
      %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
      <%= text_field_tag :destination,
      params[:destination],
      class: "form-control",
      placeholder: "Destination"
      %>
      </div>
      </div>

    <div class="form-group row">
      <div class="col-xs-12 col-sm-6 col-md-6">
        <%= text_field_tag :date,
      params[:date],
      class: "form-control",
      placeholder: "Date"
      %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
      <%= text_field_tag :time,
      params[:time],
      class: "form-control",
      placeholder: "Time"
      %>
    </div>
    </div>

    <div class="form-group row">
       <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>

    </div>
  </div>
</div>

</div>

