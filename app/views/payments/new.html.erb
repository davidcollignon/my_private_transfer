<h1>Purchase of service <%= @service.car_id%></h1>

<h2><%= @service.flight_number %></h2>
<%= link_to "Delete", service_path(@service),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%= link_to "Edit", edit_service_path(@service), method: :get %>


<%= form_tag service_payments_path(@service) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@service.final_price) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Service"
    data-email="<%= current_user.email %>"
    data-description="Service <%= @service.car_id %>"
    data-amount="<%= @service.final_price_cents %>"
    data-currency="<%= @service.final_price.currency %>"></script>
<% end %>
